@model List<BlogMVC.Models.Category>



<div class="container row p-0 m-0">
    <div>
        <h2 class="text-info">Category List</h2>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post" asp-action="DeleteCategory">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="@Model.FirstOrDefault().Name"></label>
                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                            </td>
                            <td class="form-group row">
                                    <div class="col-8 offset-2 row">
                                        <div class="col-5">
                                            <a asp-action="EditCategory" asp-route-id="@item.Id" class="button btn-warning w-100" style="background-color: #ffc107;">Edit</a>
                                        </div>
                                        <div class="col-5">
                                            <button type="submit" onclick="return confirm('Are you sure')" class="button btn-danger w-100" name="id" value="@item.Id" style="background-color: #dc3545;">Delete</button>
                                        </div>
                                    </div>

                            </td>

                        </tr>
                    }
                </table>
            }
        </form>
    </div>
</div>