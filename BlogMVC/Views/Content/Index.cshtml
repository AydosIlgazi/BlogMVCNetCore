@model List<BlogMVC.Models.BlogPost>



<div class="container row p-0 m-0">
    <div class="col-3">
        <h2 class="text-info">Blog Post List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="AddBlogPost" class="button btn-info w-100" style="background-color: #17a2b8;">Add Blog Post</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post" asp-action="DeleteBlogPost">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="@Model.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.FirstOrDefault().Category"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Category.Name
                            </td>
                            <td class="form-group row">
                                <div class="col-8 offset-2 row">
                                    <div class="col-5">
                                        <a asp-action="EditBlogPost" asp-route-id="@item.Id" class="button btn-warning w-100" style="background-color: #ffc107;">Edit</a>
                                    </div>
                                    <div class="col-5">
                                        <button type="submit" onclick="return confirm('Are you sure')" class="button btn-danger w-100" name="id" value="@item.Id" style="background-color: #dc3545;">Delete</button>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </table>
            }
        </form>
    </div>
</div>