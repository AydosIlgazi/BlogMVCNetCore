@model BlogMVC.ViewModels.Login

<form method="post" asp-controller="Auth" asp-action="Login" class="w-100">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Login</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserName" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4 offset-4">
                        <input type="submit" class="btn-info w-100" value="Login" style="background-color: #17a2b8;" />
                    </div>
                    <div class="col-4">
                        <a asp-controller="Home" asp-action="Index" class="button btn-success  w-100" style="background-color: #28a745;"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>

                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>